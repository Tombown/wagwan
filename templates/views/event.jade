extends ../layouts/default

block content
    .event-page(data-latitude=data.event.location.geo[1], data-longitude=data.event.location.geo[0])
        .row
            .col-md-8.col-sm-8.col-xs-12.title
                .col-md-10.col-sm-10.col-xs-10
                    h3= data.event.title
                    .address
                        != data.event.location.street1
                        | ,
                        != data.event.location.postcode
                .col-md-2.col-sm-2.col-xs-2.time
                    span= formatTime(data.event.start, data.event.end)
        .row
            .col-md-8.col-sm-8.col-xs-12.map
                #map
                .time-expanded
                    h4= eventTime(data.event.start) + ' to ' + eventTime(data.event.end)
                .distance
                    h4= distanceToEvent(data.event) + ' mile'
                .price.pull-left
                    h4 Â£
                        != data.event.price
            .col-md-4.col-sm-4.col-xs-12.details
                .event-copy
                    ul.list-unstyled.list-inline
                        li
                            i.fa.fa-user.fa-2x
                        li
                            h4
                                != data.event.author.name.first
                                span &nbsp;
                                != data.event.author.name.last
                    != data.event.publisheddate
                    != data.event.description
                .tag-container
                    ul.list-unstyled.list-inline.social
                        li.tag!= data.event.hashtag.first
                        if data.event.hashtag.second
                            li.tag!= data.event.hashtag.second
                        if data.event.hashtag.third
                            li.tag!= data.event.hashtag.third
                        if data.event.hashtag.fourth
                            li.tag!= data.event.hashtag.fourth
                .button
                    if data.event.phoneNumber
                    a(href='tel:' + data.event.phoneNumber)
                        button.button.btn.btn-default.btn-width-100
                            h4 0207 622 8259
                    if data.event.link
                    a(href=data.event.link)
                        button.button.btn.btn-primary.btn-width-100
                            h4 Visit website
                .social-event-page
                    ul.list-unstyled.list-inline.social
                        li
                            a(href='#')
                                i.fa.fa-facebook-square.fa-2x
                        li
                            a(href='#')
                                i.fa.fa-twitter-square.fa-2x
                        li
                            a(href='#')
                                i.fa.fa-google-plus-square.fa-2x

prepend js
    script(src="http://maps.google.com/maps/api/js?sensor=true")
